public boolean hasAlpha(){
    if (mDirty) {
        mDirty = mHasAlpha = false;
        final int count = mAnimations.size();
        final ArrayList<Animation> animations = mAnimations;
        for (int i = 0; i < count; i++) {
            if (animations.get(i).hasAlpha()) {
                mHasAlpha = true;
                break;
            }
        }
    }
    return mHasAlpha;
}