public TransitionSet setOrdering(int ordering){
    switch(ordering) {
        case ORDERING_SEQUENTIAL:
            mPlayTogether = false;
            break;
        case ORDERING_TOGETHER:
            mPlayTogether = true;
            break;
        default:
            throw new AndroidRuntimeException("Invalid parameter for TransitionSet " + "ordering: " + ordering);
    }
    return this;
}