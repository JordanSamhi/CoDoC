public int countJobsForUid(int uid){
    int total = 0;
    ArraySet<JobStatus> jobs = mJobs.get(uid);
    if (jobs != null) {
        for (int i = jobs.size() - 1; i >= 0; i--) {
            JobStatus job = jobs.valueAt(i);
            if (job.getUid() == job.getSourceUid()) {
                total++;
            }
        }
    }
    return total;
}