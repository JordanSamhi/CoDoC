public void addRect(float left, float top, float right, float bottom, int dir){
    moveTo(left, top);
    Direction direction = getDirection(dir);
    switch(direction) {
        case CW:
            lineTo(right, top);
            lineTo(right, bottom);
            lineTo(left, bottom);
            break;
        case CCW:
            lineTo(left, bottom);
            lineTo(right, bottom);
            lineTo(right, top);
            break;
    }
    close();
    resetLastPointFromPath();
}