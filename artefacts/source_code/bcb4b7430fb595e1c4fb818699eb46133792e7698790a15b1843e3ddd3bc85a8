public void play(@NonNull Context context, @NonNull Uri uri, boolean looping, @NonNull AudioAttributes attributes) throws IllegalArgumentException{
    if (context == null || uri == null || attributes == null) {
        throw new IllegalArgumentException("Illegal null AsyncPlayer.play() argument");
    }
    Command cmd = new Command();
    cmd.requestTime = SystemClock.uptimeMillis();
    cmd.code = PLAY;
    cmd.context = context;
    cmd.uri = uri;
    cmd.looping = looping;
    cmd.attributes = attributes;
    synchronized (mCmdQueue) {
        enqueueLocked(cmd);
        mState = PLAY;
    }
}