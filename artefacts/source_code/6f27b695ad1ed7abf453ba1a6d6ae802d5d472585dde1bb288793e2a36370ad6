public void setRouteTypes(int types){
    if (mRouteTypes != types) {
        if (mRouteTypes != 0) {
            mRouter.removeCallback(mCallback);
        }
        mRouteTypes = types;
        if (types != 0) {
            mRouter.addCallback(types, mCallback, MediaRouter.CALLBACK_FLAG_PASSIVE_DISCOVERY);
        }
        refreshRoute();
        if (mButton != null) {
            mButton.setRouteTypes(mRouteTypes);
        }
    }
}