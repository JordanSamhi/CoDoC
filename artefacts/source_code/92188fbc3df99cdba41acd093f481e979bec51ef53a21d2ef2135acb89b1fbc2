public int findTokenStart(CharSequence text, int cursor){
    int best = 0;
    int i = 0;
    while (i < cursor) {
        i = findTokenEnd(text, i);
        if (i < cursor) {
            i++;
            while (i < cursor && text.charAt(i) == ' ') {
                i++;
            }
            if (i < cursor) {
                best = i;
            }
        }
    }
    return best;
}