public UidDetail getUidDetail(int uid, boolean blocking){
    UidDetail detail;
    synchronized (mUidDetailCache) {
        detail = mUidDetailCache.get(uid);
    }
    if (detail != null) {
        return detail;
    } else if (!blocking) {
        return null;
    }
    detail = buildUidDetail(uid);
    synchronized (mUidDetailCache) {
        mUidDetailCache.put(uid, detail);
    }
    return detail;
}