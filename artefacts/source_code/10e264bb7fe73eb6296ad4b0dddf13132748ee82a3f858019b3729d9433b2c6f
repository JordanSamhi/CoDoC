public void bindTexture(Allocation va, int slot) throws IllegalArgumentException{
    mRS.validate();
    if ((slot < 0) || (slot >= mTextureCount)) {
        throw new IllegalArgumentException("Slot ID out of range.");
    }
    if (va != null && va.getType().hasFaces() && mTextures[slot] != TextureType.TEXTURE_CUBE) {
        throw new IllegalArgumentException("Cannot bind cubemap to 2d texture slot");
    }
    long id = va != null ? va.getID(mRS) : 0;
    mRS.nProgramBindTexture(getID(mRS), slot, id);
}