public static int getImplicitNetmask(Inet4Address address){
    int firstByte = address.getAddress()[0] & 0xff;
    if (firstByte < 128) {
        return 8;
    } else if (firstByte < 192) {
        return 16;
    } else if (firstByte < 224) {
        return 24;
    } else {
        return 32;
    }
}