public void connected(){
    if (false)
        Log.v("ddm-hello", "Connected!");
    if (false) {
        byte[] data = new byte[] { 0, 1, 2, 3, 4, -4, -3, -2, -1, 127 };
        Chunk testChunk = new Chunk(ChunkHandler.type("TEST"), data, 1, data.length - 2);
        DdmServer.sendChunk(testChunk);
    }
}