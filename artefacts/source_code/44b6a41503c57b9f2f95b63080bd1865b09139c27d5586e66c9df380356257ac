public int getScanMode(){
    if (getState() != STATE_ON) {
        return SCAN_MODE_NONE;
    }
    try {
        mServiceLock.readLock().lock();
        if (mService != null) {
            return mService.getScanMode();
        }
    } catch (RemoteException e) {
        Log.e(TAG, "", e);
    } finally {
        mServiceLock.readLock().unlock();
    }
    return SCAN_MODE_NONE;
}