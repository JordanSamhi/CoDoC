public static int getRotationForOrientationValue(short orientation){
    switch(orientation) {
        case Orientation.TOP_LEFT:
            return 0;
        case Orientation.RIGHT_TOP:
            return 90;
        case Orientation.BOTTOM_LEFT:
            return 180;
        case Orientation.RIGHT_BOTTOM:
            return 270;
        default:
            return 0;
    }
}