public static String joinStrings(String separator, List<String> strings){
    switch(strings.size()) {
        case 0:
            return "";
        case 1:
            return strings.get(0);
        default:
            StringBuilder joiner = new StringBuilder();
            boolean first = true;
            for (String field : strings) {
                if (first) {
                    first = false;
                } else {
                    joiner.append(separator);
                }
                joiner.append(field);
            }
            return joiner.toString();
    }
}