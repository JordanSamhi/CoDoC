public MeteringRectangle toMetering(){
    int weight = clip(this.weight, MeteringRectangle.METERING_WEIGHT_MIN, MeteringRectangle.METERING_WEIGHT_MAX, rect, "weight");
    int x = clipLower(rect.left, 0, rect, "left");
    int y = clipLower(rect.top, 0, rect, "top");
    int w = clipLower(rect.width(), 0, rect, "width");
    int h = clipLower(rect.height(), 0, rect, "height");
    return new MeteringRectangle(x, y, w, h, weight);
}