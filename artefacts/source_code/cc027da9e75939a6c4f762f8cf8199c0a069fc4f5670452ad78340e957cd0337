public static String convertPreDial(String phoneNumber){
    if (phoneNumber == null) {
        return null;
    }
    int len = phoneNumber.length();
    StringBuilder ret = new StringBuilder(len);
    for (int i = 0; i < len; i++) {
        char c = phoneNumber.charAt(i);
        if (isPause(c)) {
            c = PAUSE;
        } else if (isToneWait(c)) {
            c = WAIT;
        }
        ret.append(c);
    }
    return ret.toString();
}