public boolean setArtworkConfiguration(boolean wantBitmap, int width, int height) throws IllegalArgumentException{
    synchronized (mInfoLock) {
        if (wantBitmap) {
            if ((width > 0) && (height > 0)) {
                if (width > mMaxBitmapDimension) {
                    width = mMaxBitmapDimension;
                }
                if (height > mMaxBitmapDimension) {
                    height = mMaxBitmapDimension;
                }
                mArtworkWidth = width;
                mArtworkHeight = height;
            } else {
                throw new IllegalArgumentException("Invalid dimensions");
            }
        } else {
            mArtworkWidth = -1;
            mArtworkHeight = -1;
        }
    }
    return true;
}