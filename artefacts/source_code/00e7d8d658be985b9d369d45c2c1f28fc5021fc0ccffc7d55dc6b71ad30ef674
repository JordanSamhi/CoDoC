public int getLineForVertical(int vertical){
    int high = mLineCount;
    int low = -1;
    int guess;
    int[] lines = mLines;
    while (high - low > 1) {
        guess = (high + low) >> 1;
        if (lines[mColumns * guess + TOP] > vertical) {
            high = guess;
        } else {
            low = guess;
        }
    }
    if (low < 0) {
        return 0;
    } else {
        return low;
    }
}