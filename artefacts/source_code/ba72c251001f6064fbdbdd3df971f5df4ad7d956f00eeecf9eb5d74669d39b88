public static int addOrThrow(int a, int b) throws IllegalArgumentException{
    if (b == 0) {
        return a;
    }
    if (b > 0 && a <= (Integer.MAX_VALUE - b)) {
        return a + b;
    }
    if (b < 0 && a >= (Integer.MIN_VALUE - b)) {
        return a + b;
    }
    throw new IllegalArgumentException("Addition overflow: " + a + " + " + b);
}