public Runnable setImageURIAsync(@Nullable Uri uri){
    if (mResource != 0 || (mUri != uri && (uri == null || mUri == null || !uri.equals(mUri)))) {
        Drawable d = uri == null ? null : getDrawableFromUri(uri);
        if (d == null) {
            uri = null;
        }
        return new ImageDrawableCallback(d, uri, 0);
    }
    return null;
}