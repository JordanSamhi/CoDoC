public static boolean isBinary(String s){
    if (s == null) {
        throw new NullPointerException();
    }
    for (int i = 0; i < s.length(); i++) {
        char c = s.charAt(i);
        boolean allowedInXml = (c >= 0x20 && c <= 0xd7ff) || (c >= 0xe000 && c <= 0xfffd);
        if (!allowedInXml) {
            return true;
        }
    }
    return false;
}