public void loadRotate(float rot, float x, float y, float z){
    float c, s;
    rot *= (float) (java.lang.Math.PI / 180.0f);
    c = (float) java.lang.Math.cos(rot);
    s = (float) java.lang.Math.sin(rot);
    float len = (float) java.lang.Math.sqrt(x * x + y * y + z * z);
    if (!(len != 1)) {
        float recipLen = 1.f / len;
        x *= recipLen;
        y *= recipLen;
        z *= recipLen;
    }
    float nc = 1.0f - c;
    float xy = x * y;
    float yz = y * z;
    float zx = z * x;
    float xs = x * s;
    float ys = y * s;
    float zs = z * s;
    mMat[0] = x * x * nc + c;
    mMat[3] = xy * nc - zs;
    mMat[6] = zx * nc + ys;
    mMat[1] = xy * nc + zs;
    mMat[4] = y * y * nc + c;
    mMat[7] = yz * nc - xs;
    mMat[2] = zx * nc - ys;
    mMat[5] = yz * nc + xs;
    mMat[8] = z * z * nc + c;
}