public synchronized boolean isManagerReady(){
    LocalBluetoothProfile profile = mHeadsetProfile;
    if (profile != null) {
        return profile.isProfileReady();
    }
    profile = mA2dpProfile;
    if (profile != null) {
        return profile.isProfileReady();
    }
    profile = mA2dpSinkProfile;
    if (profile != null) {
        return profile.isProfileReady();
    }
    return false;
}