public CharSequence getQueryHint(){
    final CharSequence hint;
    if (mQueryHint != null) {
        hint = mQueryHint;
    } else if (mSearchable != null && mSearchable.getHintId() != 0) {
        hint = getContext().getText(mSearchable.getHintId());
    } else {
        hint = mDefaultQueryHint;
    }
    return hint;
}