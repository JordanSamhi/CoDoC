public static int setPermissions(String path, int mode, int uid, int gid){
    try {
        Os.chmod(path, mode);
    } catch (ErrnoException e) {
        Slog.w(TAG, "Failed to chmod(" + path + "): " + e);
        return e.errno;
    }
    if (uid >= 0 || gid >= 0) {
        try {
            Os.chown(path, uid, gid);
        } catch (ErrnoException e) {
            Slog.w(TAG, "Failed to chown(" + path + "): " + e);
            return e.errno;
        }
    }
    return 0;
}