public void setCompoundDrawablePadding(int pad){
    Drawables dr = mDrawables;
    if (pad == 0) {
        if (dr != null) {
            dr.mDrawablePadding = pad;
        }
    } else {
        if (dr == null) {
            mDrawables = dr = new Drawables(getContext());
        }
        dr.mDrawablePadding = pad;
    }
    invalidate();
    requestLayout();
}