public void stop(){
    if (mLocalPlayer != null) {
        destroyLocalPlayer();
    } else if (mAllowRemote && (mRemotePlayer != null)) {
        try {
            mRemotePlayer.stop(mRemoteToken);
        } catch (RemoteException e) {
            Log.w(TAG, "Problem stopping ringtone: " + e);
        }
    }
}