public static final void appendValueToSql(StringBuilder sql, Object value){
    if (value == null) {
        sql.append("NULL");
    } else if (value instanceof Boolean) {
        Boolean bool = (Boolean) value;
        if (bool) {
            sql.append('1');
        } else {
            sql.append('0');
        }
    } else {
        appendEscapedSQLString(sql, value.toString());
    }
}