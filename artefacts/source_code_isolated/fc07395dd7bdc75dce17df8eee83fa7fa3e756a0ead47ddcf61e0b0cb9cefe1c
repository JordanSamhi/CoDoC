public static String buildInputMethodsAndSubtypesString(final HashMap<String, HashSet<String>> imeToSubtypesMap){
    final StringBuilder builder = new StringBuilder();
    for (final String imi : imeToSubtypesMap.keySet()) {
        if (builder.length() > 0) {
            builder.append(INPUT_METHOD_SEPARATER);
        }
        final HashSet<String> subtypeIdSet = imeToSubtypesMap.get(imi);
        builder.append(imi);
        for (final String subtypeId : subtypeIdSet) {
            builder.append(INPUT_METHOD_SUBTYPE_SEPARATER).append(subtypeId);
        }
    }
    return builder.toString();
}