public void go(long milliseconds){
    synchronized (this) {
        mOffAt = SystemClock.uptimeMillis() + milliseconds;
        boolean alreadyOn;
        if (mThread == null) {
            alreadyOn = false;
            mLock.close();
            mThread = new T();
            mThread.start();
            mLock.block();
            mOffCalled = false;
        } else {
            alreadyOn = true;
            mThread.interrupt();
        }
        on(alreadyOn);
    }
}