public static String quoteName(String name){
    StringBuilder sb = new StringBuilder();
    int len = name.length();
    for (int i = 0; i < len; i++) {
        char c = name.charAt(i);
        if (c == '\\' || c == '"') {
            sb.append('\\');
        }
        sb.append(c);
    }
    return sb.toString();
}