public static MatchResult assertContainsRegex(String message, String expectedRegex, String actual){
    if (actual == null) {
        failNotContains(message, expectedRegex, actual);
    }
    Matcher matcher = getMatcher(expectedRegex, actual);
    if (!matcher.find()) {
        failNotContains(message, expectedRegex, actual);
    }
    return matcher;
}