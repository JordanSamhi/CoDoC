public int setParameter(int[] param, byte[] value) throws IllegalStateException{
    if (param.length > 2) {
        return ERROR_BAD_VALUE;
    }
    byte[] p = intToByteArray(param[0]);
    if (param.length > 1) {
        byte[] p2 = intToByteArray(param[1]);
        p = concatArrays(p, p2);
    }
    return setParameter(p, value);
}