public int getOpacity(){
    if (mBlendModeColorFilter != null || mPaint.getColorFilter() != null) {
        return PixelFormat.TRANSLUCENT;
    }
    switch(mColorState.mUseColor >>> 24) {
        case 255:
            return PixelFormat.OPAQUE;
        case 0:
            return PixelFormat.TRANSPARENT;
    }
    return PixelFormat.TRANSLUCENT;
}