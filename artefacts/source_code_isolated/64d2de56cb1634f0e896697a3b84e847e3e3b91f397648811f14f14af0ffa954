public long setJulianDay(int julianDay){
    long millis = (julianDay - EPOCH_JULIAN_DAY) * DateUtils.DAY_IN_MILLIS;
    set(millis);
    int approximateDay = getJulianDay(millis, gmtoff);
    int diff = julianDay - approximateDay;
    monthDay += diff;
    hour = 0;
    minute = 0;
    second = 0;
    millis = normalize(true);
    return millis;
}