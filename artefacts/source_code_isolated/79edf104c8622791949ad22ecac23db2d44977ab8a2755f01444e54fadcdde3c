public ActivityInfo resolveActivityInfo(@NonNull PackageManager pm, @PackageManager.ComponentInfoFlags int flags){
    ActivityInfo ai = null;
    if (mComponent != null) {
        try {
            ai = pm.getActivityInfo(mComponent, flags);
        } catch (PackageManager.NameNotFoundException e) {
        }
    } else {
        ResolveInfo info = pm.resolveActivity(this, PackageManager.MATCH_DEFAULT_ONLY | flags);
        if (info != null) {
            ai = info.activityInfo;
        }
    }
    return ai;
}