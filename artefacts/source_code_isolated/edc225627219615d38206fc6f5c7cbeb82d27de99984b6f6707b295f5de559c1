public void setIcon(Drawable icon){
    mIcon = icon;
    mIconId = 0;
    if (mIconView != null) {
        if (icon != null) {
            mIconView.setVisibility(View.VISIBLE);
            mIconView.setImageDrawable(icon);
        } else {
            mIconView.setVisibility(View.GONE);
        }
    }
}