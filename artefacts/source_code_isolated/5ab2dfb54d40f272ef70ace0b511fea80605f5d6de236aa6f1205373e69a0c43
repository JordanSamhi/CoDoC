public boolean onTouchEvent(MotionEvent event){
    if (mClickTarget != null) {
        mGestureDetector.onTouchEvent(event);
        final int action = event.getAction();
        if (action == MotionEvent.ACTION_UP || action == MotionEvent.ACTION_CANCEL) {
            mClickTarget = null;
        }
        return true;
    }
    return false;
}