public void notifyVideoUnavailable(@TvInputManager.VideoUnavailableReason final int reason){
    if (reason < TvInputManager.VIDEO_UNAVAILABLE_REASON_START || reason > TvInputManager.VIDEO_UNAVAILABLE_REASON_END) {
        Log.e(TAG, "notifyVideoUnavailable - unknown reason: " + reason);
    }
    executeOrPostRunnableOnMainThread(new Runnable() {

        @MainThread
        @Override
        public void run() {
            try {
                if (DEBUG)
                    Log.d(TAG, "notifyVideoUnavailable");
                if (mSessionCallback != null) {
                    mSessionCallback.onVideoUnavailable(reason);
                }
            } catch (RemoteException e) {
                Log.w(TAG, "error in notifyVideoUnavailable", e);
            }
        }
    });
}