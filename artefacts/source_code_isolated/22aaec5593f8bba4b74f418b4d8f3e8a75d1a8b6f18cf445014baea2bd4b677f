public void resolvePadding(){
    super.resolvePadding();
    int count = getChildCount();
    for (int i = 0; i < count; i++) {
        final View child = getChildAt(i);
        if (child.isLayoutDirectionInherited() && !child.isPaddingResolved()) {
            child.resolvePadding();
        }
    }
}