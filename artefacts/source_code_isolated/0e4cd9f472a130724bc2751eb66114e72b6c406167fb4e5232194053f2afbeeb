public boolean equals(Object that){
    if (this == that) {
        return true;
    }
    if (that == null || getClass() != that.getClass()) {
        return false;
    }
    Spec spec = (Spec) that;
    if (!alignment.equals(spec.alignment)) {
        return false;
    }
    if (!span.equals(spec.span)) {
        return false;
    }
    return true;
}