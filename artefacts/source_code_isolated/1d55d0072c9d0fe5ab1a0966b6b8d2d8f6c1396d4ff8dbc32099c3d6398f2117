public static byte[] concatArrays(byte[]... arrays){
    int len = 0;
    for (byte[] a : arrays) {
        len += a.length;
    }
    byte[] b = new byte[len];
    int offs = 0;
    for (byte[] a : arrays) {
        System.arraycopy(a, 0, b, offs, a.length);
        offs += a.length;
    }
    return b;
}