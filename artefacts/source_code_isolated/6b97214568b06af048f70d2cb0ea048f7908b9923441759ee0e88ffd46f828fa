public void onDebugDraw(View view, Canvas canvas, Paint paint){
    Insets oi = isLayoutModeOptical(view.mParent) ? view.getOpticalInsets() : Insets.NONE;
    fillDifference(canvas, view.getLeft() + oi.left, view.getTop() + oi.top, view.getRight() - oi.right, view.getBottom() - oi.bottom, leftMargin, topMargin, rightMargin, bottomMargin, paint);
}