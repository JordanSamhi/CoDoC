public static Interpolator loadInterpolator(Resources res, Theme theme, int id) throws NotFoundException{
    XmlResourceParser parser = null;
    try {
        parser = res.getAnimation(id);
        return createInterpolatorFromXml(res, theme, parser);
    } catch (XmlPullParserException ex) {
        NotFoundException rnf = new NotFoundException("Can't load animation resource ID #0x" + Integer.toHexString(id));
        rnf.initCause(ex);
        throw rnf;
    } catch (IOException ex) {
        NotFoundException rnf = new NotFoundException("Can't load animation resource ID #0x" + Integer.toHexString(id));
        rnf.initCause(ex);
        throw rnf;
    } finally {
        if (parser != null)
            parser.close();
    }
}