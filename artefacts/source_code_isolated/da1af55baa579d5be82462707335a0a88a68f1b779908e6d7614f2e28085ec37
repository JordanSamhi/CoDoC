public static String convertKeypadLettersToDigits(String input){
    if (input == null) {
        return input;
    }
    int len = input.length();
    if (len == 0) {
        return input;
    }
    char[] out = input.toCharArray();
    for (int i = 0; i < len; i++) {
        char c = out[i];
        out[i] = (char) KEYPAD_MAP.get(c, c);
    }
    return new String(out);
}