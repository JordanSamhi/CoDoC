public Builder allowFamily(int family){
    if (family == AF_INET) {
        mConfig.allowIPv4 = true;
    } else if (family == AF_INET6) {
        mConfig.allowIPv6 = true;
    } else {
        throw new IllegalArgumentException(family + " is neither " + AF_INET + " nor " + AF_INET6);
    }
    return this;
}