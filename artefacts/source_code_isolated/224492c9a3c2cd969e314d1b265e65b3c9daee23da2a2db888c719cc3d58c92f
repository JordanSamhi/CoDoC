public static void writeVarLong(DataOutputStream out, long value) throws IOException{
    while (true) {
        if ((value & ~0x7FL) == 0) {
            out.writeByte((int) value);
            return;
        } else {
            out.writeByte(((int) value & 0x7F) | 0x80);
            value >>>= 7;
        }
    }
}