public void onLocationChanged(Location location){
    synchronized (mLock) {
        if (mReceivingLocationUpdates) {
            mLastLocationUpdate = location;
        }
        if (mPendingUpdate) {
            mHandler.removeMessages(MSG_UPDATE_FENCES);
        } else {
            mPendingUpdate = true;
        }
    }
    updateFences();
}