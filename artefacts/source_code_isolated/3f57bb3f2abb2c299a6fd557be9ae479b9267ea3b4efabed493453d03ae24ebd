public String toString(){
    String initState = "";
    switch(state) {
        case UNINITIALIZED:
            initState = "<not initialized>";
            break;
        case VERIFY:
            initState = "<initialized for verifying>";
            break;
        case SIGN:
            initState = "<initialized for signing>";
            break;
    }
    return "Signature object: " + getAlgorithm() + initState;
}