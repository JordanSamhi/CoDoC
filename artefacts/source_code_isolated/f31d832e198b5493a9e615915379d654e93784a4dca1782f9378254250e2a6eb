public void loadIdentity(){
    mMat[0] = 1;
    mMat[1] = 0;
    mMat[2] = 0;
    mMat[3] = 0;
    mMat[4] = 0;
    mMat[5] = 1;
    mMat[6] = 0;
    mMat[7] = 0;
    mMat[8] = 0;
    mMat[9] = 0;
    mMat[10] = 1;
    mMat[11] = 0;
    mMat[12] = 0;
    mMat[13] = 0;
    mMat[14] = 0;
    mMat[15] = 1;
}