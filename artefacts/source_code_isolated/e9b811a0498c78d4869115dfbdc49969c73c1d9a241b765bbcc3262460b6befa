public void setHeaderBackgroundDrawable(Drawable drawable){
    if (drawable != null) {
        setWillNotDraw(false);
        mBackground = drawable;
        mBackground.setCallback(this);
        setOutlineProvider(mProvider);
    } else {
        setWillNotDraw(true);
        mBackground = null;
        setOutlineProvider(null);
    }
    invalidate();
}