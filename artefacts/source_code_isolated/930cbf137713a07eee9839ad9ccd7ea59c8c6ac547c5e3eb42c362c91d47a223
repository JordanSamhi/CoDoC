public void invalidateDrawable(@NonNull Drawable dr){
    if (dr == mDrawable) {
        if (dr != null) {
            final int w = dr.getIntrinsicWidth();
            final int h = dr.getIntrinsicHeight();
            if (w != mDrawableWidth || h != mDrawableHeight) {
                mDrawableWidth = w;
                mDrawableHeight = h;
                configureBounds();
            }
        }
        invalidate();
    } else {
        super.invalidateDrawable(dr);
    }
}