public static final boolean isConfirmKey(int keyCode){
    switch(keyCode) {
        case KeyEvent.KEYCODE_DPAD_CENTER:
        case KeyEvent.KEYCODE_ENTER:
        case KeyEvent.KEYCODE_SPACE:
        case KeyEvent.KEYCODE_NUMPAD_ENTER:
            return true;
        default:
            return false;
    }
}