public int getHour(){
    final int currentHour = mRadialTimePickerView.getCurrentHour();
    if (mIs24Hour) {
        return currentHour;
    }
    if (mRadialTimePickerView.getAmOrPm() == PM) {
        return (currentHour % HOURS_IN_HALF_DAY) + HOURS_IN_HALF_DAY;
    } else {
        return currentHour % HOURS_IN_HALF_DAY;
    }
}