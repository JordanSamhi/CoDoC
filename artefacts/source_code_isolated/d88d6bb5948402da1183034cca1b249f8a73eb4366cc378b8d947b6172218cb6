public void loadFrustum(float l, float r, float b, float t, float n, float f){
    loadIdentity();
    mMat[0] = 2 * n / (r - l);
    mMat[5] = 2 * n / (t - b);
    mMat[8] = (r + l) / (r - l);
    mMat[9] = (t + b) / (t - b);
    mMat[10] = -(f + n) / (f - n);
    mMat[11] = -1;
    mMat[14] = -2 * f * n / (f - n);
    mMat[15] = 0;
}