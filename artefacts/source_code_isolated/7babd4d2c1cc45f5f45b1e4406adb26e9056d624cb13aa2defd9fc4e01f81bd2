public int firstDayOfYear(boolean leapYear){
    int leap = leapYear ? 1 : 0;
    switch(this) {
        case JANUARY:
            return 1;
        case FEBRUARY:
            return 32;
        case MARCH:
            return 60 + leap;
        case APRIL:
            return 91 + leap;
        case MAY:
            return 121 + leap;
        case JUNE:
            return 152 + leap;
        case JULY:
            return 182 + leap;
        case AUGUST:
            return 213 + leap;
        case SEPTEMBER:
            return 244 + leap;
        case OCTOBER:
            return 274 + leap;
        case NOVEMBER:
            return 305 + leap;
        case DECEMBER:
        default:
            return 335 + leap;
    }
}