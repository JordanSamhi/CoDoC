public boolean isWithinCurrentMonth(int row, int column){
    if (row < 0 || column < 0 || row > 5 || column > 6) {
        return false;
    }
    if (row == 0 && column < mOffset) {
        return false;
    }
    int day = 7 * row + column - mOffset + 1;
    if (day > mNumDaysInMonth) {
        return false;
    }
    return true;
}