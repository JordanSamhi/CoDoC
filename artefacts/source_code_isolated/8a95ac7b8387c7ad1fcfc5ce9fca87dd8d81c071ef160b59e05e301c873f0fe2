public void setIcon(int resId){
    mIcon = null;
    mIconId = resId;
    if (mIconView != null) {
        if (resId != 0) {
            mIconView.setVisibility(View.VISIBLE);
            mIconView.setImageResource(mIconId);
        } else {
            mIconView.setVisibility(View.GONE);
        }
    }
}