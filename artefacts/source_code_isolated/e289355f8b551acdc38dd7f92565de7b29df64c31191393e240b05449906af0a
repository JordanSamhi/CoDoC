public static void assertOffScreenBelow(View origin, View view){
    int[] xy = new int[2];
    view.getLocationOnScreen(xy);
    int[] xyRoot = new int[2];
    origin.getLocationOnScreen(xyRoot);
    int y = xy[1] - xyRoot[1];
    assertTrue("view should have y location on screen greater than drawing " + "height of origen view (" + y + " is not greater than " + origin.getHeight() + ")", y > origin.getHeight());
}